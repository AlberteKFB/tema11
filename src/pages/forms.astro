---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Titel">
  <article>
    <h1 class="text-5xl font-bold text-center text-green-900 max-w-2xl mx-auto">
      Hvor meget Digitalt skrald har du smidt ud?
    </h1>
    <form
      class="baggrund text-amber-50 p-6 rounded-lg max-w-md mx-auto mt-6 space-y-4"
    >
      <div>
        <span class="text-lg font-semibold">Omregner:</span>
        <div class="flex items-center gap-2 mt-2">
          <select
            class="baggrund border-3 rounded p-2 border-amber-200 text-amber-50 appearance-none pr-6"
          >
            <option>Type skrald</option>
            <option>Gamle mails</option>
            <option>Dokumenter</option>
            <option>Billeder</option>
            <option>Videoer</option>
          </select>
          <span>=</span>
          <input
            type="text"
            class="border-3 rounded p-2 baggrund border-amber-200 text-amber-50 w-16 text-center"
            placeholder="GB"
          />
        </div>
      </div>

      <div>
        <span class="text-lg font-semibold">Dine informationer:</span>
        <div class="flex gap-2 mt-2">
          <input
            type="text"
            class="border-3 rounded p-2 baggrund border-amber-200 text-amber-50 w-1/2"
            placeholder="Fornavn"
          />
          <input
            type="text"
            class="border-3 rounded p-2 baggrund border-amber-200 text-amber-50 w-1/2"
            placeholder="Efternavn"
          />
        </div>
      </div>

      <div>
        <input
          type="email"
          class="border-3 rounded p-2 baggrund border-amber-200 text-amber-50 w-full"
          placeholder="Email"
        />
      </div>

      <div>
        <input
          type="text"
          class="border-3 rounded p-2 baggrund border-amber-200 text-amber-50 w-full"
          placeholder="Land"
        />
      </div>

      <div>
        <label class="block text-sm">Deltagere:</label>
        <input
          type="number"
          class="border-3 rounded p-2 baggrund border-amber-200 text-amber-50 w-full"
          value="1"
        />
      </div>

      <div>
        <label class="block text-sm">Mængde GB slettet:</label>
        <input
          type="number"
          class="border-3 rounded p-2 baggrund border-amber-200 text-amber-50 w-full"
          value="0"
        />
      </div>

      <div class="flex items-center gap-2">
        <input type="checkbox" class="w-5 h-5" />
        <label
          >Jeg erklærer mig enig i Let's Do it, World Terms and Conditions.</label
        >
      </div>

      <div class="flex items-center gap-2">
        <input type="checkbox" class="w-5 h-5" />
        <label>Tilmeld mig nyhedsbreve fra World Cleanup Day</label>
      </div>

      <!-- Registrer knap -->
      <div class="text-center">
        <button
          class="bg-teal-600 hover:bg-teal-400 text-amber-50 font-bold py-2 px-4 rounded"
        >
          Registrer bidrag
        </button>
      </div>
    </form>
  </article>
</MainLayout>
